<launch>
  <!-- Arguments -->
  <arg name="model" default="hestia"/>
  <!--
    <arg name="open_rviz" default="true"/>
    <arg name="move_forward_only" default="false"/>
  -->

  <arg name="map_file" default="~/map.yaml"/><!--Ainda nÃ£o tem mapa aqui-->

  <!-- Laser Filter -->
  <include file="$(find utbots_navigation)/launch/laser_filter.launch"/>

  <!-- Necessary tf  -->
  <node pkg="tf2_ros" type="static_transform_publisher" name="laser_link" args="0.1 0 0.08 0 pi pi base_link laser" />
  <node pkg="tf2_ros" type="static_transform_publisher" name="scan_link" args="0 0 0 0 0 0 laser scan" />

  <!-- Map server -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>

  <!-- AMCL -->
  <include file="$(find nav_test)/launch/amcl.launch"/>

  <!-- Hoverboard driver -->
  <include file="$(find hoverboard-driver)/launch/hoverboard.launch"/>

  <!-- move_base -->
  <include file="$(find nav_test)/launch/move_base.launch">
    <arg name="model" value="$(arg model)" />
    <arg name="move_forward_only" value="false">
  </include>

  <!-- rviz -->
  <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find nav_test)/rviz/navigation.rviz"/>
  </group>
</launch>
